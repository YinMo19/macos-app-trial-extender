{
	"name": "macos-app-trial-extender",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"packageManager": "pnpm@8.14.3",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=8.10.0"
	},
	"scripts": {
		"dev": "tauri dev",
		"dev:web": "vite",
		"build": "tauri build",
		"build:web": "vite build",
		"build:icon": "tauri icon docs/logo.png",
		"preview:web": "vite preview",
		"lint": "pnpm eslint .",
		"lint:fix": "pnpm eslint . --fix",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"tauri": "tauri $@",
		"co": "cz",
		"dev-info": "md docs/dev-info.md",
		"push-main": "node .dev/release.js --no-release",
		"release": "node .dev/release.js",
		"todo": "node .dev/todo.js",
		"prepare": "husky install .dev/husky"
	},
	"keywords": [
		"macos",
		"dmg",
		"app",
		"tauri",
		"js"
	],
	"dependencies": {
		"@tauri-apps/api": "^1.5.2",
		"svelte-ripple-action": "^1.0.5",
		"tauri-plugin-autostart-api": "github:tauri-apps/tauri-plugin-autostart#v1",
		"tauri-plugin-fs-watch-api": "github:tauri-apps/tauri-plugin-fs-watch#v1"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.3",
		"@fortawesome/free-brands-svg-icons": "^6.5.1",
		"@fortawesome/free-solid-svg-icons": "^6.5.1",
		"@playwright/test": "^1.28.1",
		"@release-it/bumper": "^6.0.1",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.0.4",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@tauri-apps/cli": "^1.5.8",
		"@tsconfig/svelte": "^5.0.2",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"auto-changelog": "^2.4.0",
		"autoprefixer": "^10.4.16",
		"browserslist": "^4.22.1",
		"cli-markdown": "^3.0.5",
		"commitizen": "^4.3.0",
		"commitlint-config-gitmoji": "^2.3.1",
		"cz-customizable": "^7.0.0",
		"cz-emoji": "1.3.2-canary.2",
		"eslint": "^8.54.0",
		"eslint-plugin-align-assignments": "^1.1.2",
		"eslint-plugin-align-import": "^1.0.0",
		"eslint-plugin-html": "^7.1.0",
		"eslint-plugin-import": "^2.29.0",
		"eslint-plugin-jsdoc": "^46.9.0",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-jsonc": "^2.10.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.4",
		"eslint-plugin-svelte": "^2.35.1",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"eslint-plugin-yaml": "^0.5.0",
		"flowbite": "^2.2.1",
		"flowbite-svelte": "^0.44.20",
		"husky": "^8.0.3",
		"inquirer": "^9.2.12",
		"internal-ip": "^8.0.0",
		"jsonc-eslint-parser": "^2.4.0",
		"lint-staged": "^15.1.0",
		"markdownlint": "^0.31.1",
		"postcss": "^8.4.32",
		"release-it": "^17.0.3",
		"rimraf": "^5.0.5",
		"svelte": "^4.2.8",
		"svelte-check": "^3.4.6",
		"svelte-eslint-parser": "^0.33.1",
		"svelte-fa": "^3.0.4",
		"svelte-persisted-store": "^0.8.0",
		"sveltekit-i18n": "^2.4.2",
		"tailwindcss": "^3.4.0",
		"tslib": "^2.6.0",
		"typescript": "^5.0.2",
		"vite": "^5.0.0"
	},
	"commitlint": {
		"extends": [
			"gitmoji"
		],
		"rules": {
			"header-max-length": [
				0,
				"always",
				100
			]
		}
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-customizable"
		},
		"cz-customizable": {
			"config": ".dev/cz-config.cjs"
		}
	},
	"lint-staged": {
		"*.{js,cjs,mjs,jsx,ts,cts,mts,tsx,json}": "eslint"
	},
	"homepage": "https://github.com/angelespejo/macos-app-trial-extender",
	"repository": {
		"type": "git",
		"url": "https://github.com/angelespejo/macos-app-trial-extender"
	},
	"author": {
		"name": "Angelo",
		"email": "angelo@pigeonposse.com",
		"url": "https://github.com/angelespejo"
	},
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/angelespejo/macos-app-trial-extender/issues"
	},
	"funding": {
		"type": "individual",
		"url": "https://github.com/sponsors/angelespejo"
	},
	"extra": {
		"productName": "MATE",
		"productNameLong": "MacOS App Trial Extender",
		"licenseUrl": "https://github.com/angelespejo/macos-app-trial-extender/blob/main/LICENSE",
		"software": {
			"finalcut": {
				"name": "Final Cut Pro",
				"fromVersion": "10.7",
				"testedVersion": {
					"from": "10.7",
					"to": "10.7"
				}
			},
			"logicPro": {
				"name": "Logic Pro",
				"fromVersion": "10.8.0",
				"testedVersion": {
					"from": "10.8.0",
					"to": "10.8.1"
				}
			}
		},
		"ids": {
			"app": "mate",
			"functions": {
				"openPage": "open-page",
				"reset": "reset",
				"automate": "automate",
				"quit": "quit",
				"support": "support"
			},
			"pages": {
				"info": "info",
				"infoHow": "info-how",
				"settings": "settings"
			}
		}
	}
}
